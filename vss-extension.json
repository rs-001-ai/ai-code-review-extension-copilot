{
  "manifestVersion": 1,
  "id": "copilot-code-review-bot",
  "publisher": "RachitSinghal",
  "version": "2.0.2",
  "name": "AI Code Review (GitHub Copilot)",
  "description": "Automatically review Pull Requests using GitHub Copilot. Analyzes code for security vulnerabilities, performance issues, and best practices across 20+ languages.",
  "public": true,
  "galleryFlags": [
    "Public"
  ],
  "categories": ["Azure Pipelines"],
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "icons": {
    "default": "images/icon.png"
  },
  "content": {
    "details": {
      "path": "README.md"
    },
    "license": {
      "path": "LICENSE"
    }
  },
  "tags": [
    "code review",
    "ai",
    "github copilot",
    "pull request",
    "security",
    "performance",
    "devops",
    "automation",
    "claude",
    "gpt",
    "copilot"
  ],
  "links": {
    "repository": {
      "uri": "https://github.com/rs-001-ai/ai-code-review-extension-copilot"
    },
    "issues": {
      "uri": "https://github.com/rs-001-ai/ai-code-review-extension-copilot/issues"
    },
    "support": {
      "uri": "https://github.com/rs-001-ai/ai-code-review-extension-copilot/issues"
    },
    "learn": {
      "uri": "https://github.com/rs-001-ai/ai-code-review-extension-copilot#readme"
    }
  },
  "repository": {
    "type": "git",
    "uri": "https://github.com/rs-001-ai/ai-code-review-extension-copilot"
  },
  "badges": [
    {
      "href": "https://github.com/rs-001-ai/ai-code-review-extension-copilot",
      "uri": "https://img.shields.io/badge/GitHub-Repository-blue",
      "description": "GitHub Repository"
    }
  ],
  "contributions": [
    {
      "id": "AICodeReview",
      "type": "ms.vss-distributed-task.task",
      "targets": ["ms.vss-distributed-task.tasks"],
      "properties": {
        "name": "tasks/AICodeReviewTask"
      }
    }
  ],
  "files": [
    {
      "path": "tasks/AICodeReviewTask"
    },
    {
      "path": "images",
      "addressable": true
    }
  ]
}
